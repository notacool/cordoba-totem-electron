#!/bin/bash

# Instala las dependencias
npm install

# Inicia el backend/frontend y guarda el log y el PID
echo "Iniciando backend/frontend en segundo plano..."
nohup npm run start > start.log 2>&1 &
echo $! > killpid

echo "Backend/frontend iniciado. PID guardado en killpid. Log en start.log."

echo "Lanzando Electron en primer plano (sin sandbox)..."
ELECTRON_DISABLE_SANDBOX=true npm run electron
